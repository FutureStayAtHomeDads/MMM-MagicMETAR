Entry for config file


// Inside the config object in config.js
{
    module: 'MMM-MagicMETAR',
    position: 'top_right',
    header: 'Magic METAR',
    config: {
        airports: ['KSFO', 'KJFK', 'KLAX', 'EGLL', 'LFPG', 'RJTT', 'OMDB'], // List of airports to display weather data for
        updateInterval: 10, // Update interval in minutes
        showDelayData: true, // Toggle display of delay data
        showHeader: true, // Toggle display of module header
        headerText: "Magic METAR", // Custom header text
        showIcons: true, // Toggle display of weather icons
        iconSet: 'default', // Set of weather icons to use
        temperatureUnit: 'F', // Unit of temperature to display (Celsius or Fahrenheit)
        dateFormat: 'ddd, MMM D, h:mm A', // Date and time format
        displayLimit: 6, // Maximum number of airports to display on each page
        rotationSpeed: 5 // Rotation speed in seconds for switching between pages of airports
    }
}
